@model IdentityTemplate.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<h1>Login</h1>

<div class="row">
    <div class="col-md-12">
        <form method="post" asp-controller="Cuenta" asp-action="Login">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contrasenia">Contraseña</label>
                <input asp-for="Contrasenia" class="form-control" />
                <span asp-validation-for="Contrasenia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="Recordarme">
                        <input asp-for="Recordarme" />
                        @Html.DisplayNameFor(m => m.Recordarme)
                    </label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>
</div>